{
    "env": {
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "extends": ["eslint:recommended", "google", "plugin:prettier/recommended"],
    "rules": {
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "always"],
        "eqeqeq": ["error", "smart"],
        "new-cap": [
            "error",
            {
                "capIsNew": false
            }
        ]
    }
}
